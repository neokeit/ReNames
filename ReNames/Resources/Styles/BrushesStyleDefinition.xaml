        <GradientStop Color="Gray" Offset="0.0" />
        <GradientStop Color="Gray" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ColorPrimarioClaro" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="#42BCF9" Offset="0.0" />
        <GradientStop Color="#42BCF9" Offset="1.0" />
